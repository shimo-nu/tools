" line  number
set number

" do no make backup file
set nobackup
set noswapfile

set autoread

" current line
set cursorline

" smart indent
set smartindent

" can move next word
set virtualedit=onemore

" enable syntax
syntax enable

" tab config
set expandtab
set tabstop=2
set shiftwidth=2

set laststatus=2

set hidden

set termguicolors

set ignorecase
